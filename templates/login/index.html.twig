{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~ ' - Connexion' }}{% endblock %}

{% block body %}
    <div class="row justify-content-center justify-items-center">
        <div class="col align-self-center">
            <div class="card mx-auto" style="width: 25rem">
                <div class="card-header">
                    <h1 class="card-title text-center font-weight-bold" style="font-family: 'Yusei Magic', sans-serif">
                        Connexion
                    </h1>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="post" name="login" action="{{ path('security_login') }}">
                        <div class="form-group">
                            <label for="inputUsername">Adresse Email</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="inputUsername"
                                   class="form-control" placeholder="Votre adresse email" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control"
                                   placeholder="Votre mot de passe" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" name="_target_path" value="{{ path('home') }}"/>

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me">
                                <label class="form-check-label" for="remember_me">
                                    Se souvenir de moi
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">Connexion</button>
                        <a href="{{ path('security_forgot_password_request') }}" class="float-right">Mot de passe oubli√©</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
