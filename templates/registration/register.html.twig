{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Créer un compte{% endblock %}

{% block body %}
    <div class="row justify-content-center justify-items-center">
        <div class="col align-self-center">
            <div class="card mx-auto" style="width: 25rem">
                <div class="card-header">
                    <h1 class="card-title text-center font-weight-bold" style="font-family: 'Yusei Magic', sans-serif">
                        {{ 'Créer un compte'|trans }}
                    </h1>
                </div>
                <div class="card-body">
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.lastName) }}
                    {{ form_row(registrationForm.firstName) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}

                    <button type="submit" class="btn btn-info">Créer mon compte</button>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
