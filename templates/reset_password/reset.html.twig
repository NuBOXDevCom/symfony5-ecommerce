{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
    <h1 class="text-center font-weight-bold" style="font-family: 'Yusei Magic', sans-serif">Réinitialisation de votre
        mot de passe</h1>

    {{ form_start(resetForm) }}
    {{ form_row(resetForm.plainPassword) }}
    <button class="btn btn-primary mt-4">Réinitialiser mon mot de passe</button>
    {{ form_end(resetForm) }}
{% endblock %}
